<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingTop="20dp"
    android:paddingRight="25dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/ll_cancel_option1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <ImageView
            android:id="@+id/iv_cancel_option1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/uikit_icon_check_default" />

        <TextView
            style="@style/UikitTextView"
            android:layout_marginLeft="12dp"
            android:text="已和解"
            android:textColor="@color/uikit_text_sub_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cancel_option2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        >

        <ImageView
            android:id="@+id/iv_cancel_option2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/uikit_icon_check_default" />

        <TextView
            style="@style/UikitTextView"
            android:layout_marginLeft="12dp"
            android:text="已履行"
            android:textColor="@color/uikit_text_sub_content"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cancel_option3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        >

        <ImageView
            android:id="@+id/iv_cancel_option3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/uikit_icon_check_default" />

        <TextView
            style="@style/UikitTextView"
            android:layout_marginLeft="12dp"
            android:text="其他"
            android:textColor="@color/uikit_text_sub_content" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_cancel_reason"
        style="@style/UikitEditText.Normal.TextArea"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/uikit_bg_edit_with_border"
        android:gravity="left"
        android:hint="请输入原因1-20字"
        android:maxLength="20"
        android:padding="5dp"
        android:visibility="gone"
        />

    <TextView
        style="@style/UikitTextView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="取消仲裁后10天内将不能再次申请，是否确定取消仲裁？"
        android:textColor="@color/uikit_text_sub_content" />

</LinearLayout>
