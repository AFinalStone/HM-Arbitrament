<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F6F6F6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/arbitrament_selector_bg_add_collection_prove"
        android:layerType="software">

        <LinearLayout
            android:id="@+id/ll_add_collection_prove"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/UikitTextView"
                android:paddingBottom="3dp"
                android:text="+"
                android:textSize="@dimen/textFontSize_16" />

            <TextView
                style="@style/UikitTextView"
                android:layout_marginStart="5dp"
                android:text="上传催收证明" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_collection_prove_detail"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="3dp"
                android:src="@mipmap/arbitrament_ic_collection_prove" />

            <TextView
                style="@style/UikitTextView.Large"
                android:layout_marginStart="3dp"
                android:text="催收证明" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        style="@style/UikitTextView.Auxiliary.Small"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:lineSpacingMultiplier="1.2"
        android:text="*上传催收证明可以快速完成仲裁\n催收证明包含催收函接收证明、聊天截图、邮件截图等" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_ok"
        style="@style/UikitHMButton.Large.Main"
        android:layout_height="48dp"
        android:layout_marginEnd="38dp"
        android:layout_marginStart="38dp"
        android:enabled="false"
        android:text="确认信息" />
</LinearLayout>
