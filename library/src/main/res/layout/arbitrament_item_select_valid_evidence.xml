<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/arbitrament_selector_bg_elec_evidence"
    android:gravity="center_vertical"
    android:layerType="software"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="34dp"
        tools:src="@mipmap/arbitrament_ic_elec_evidence_flag_pdf" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/UikitTextView"
        android:layout_width="0dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:textSize="@dimen/uikit_sub_title_text_size"
        tools:text="汇款凭证" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/UikitTextView.Auxiliary"
        android:layout_marginEnd="10dp"
        tools:text="09月23日" />


</LinearLayout>
