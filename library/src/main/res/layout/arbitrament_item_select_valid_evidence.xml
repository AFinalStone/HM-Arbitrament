<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="69dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingEnd="8dp"
    android:paddingStart="8dp">

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="26dp"
        android:src="@mipmap/uikit_icon_check_default" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/UikitTextView"
        android:layout_marginStart="37dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/uikit_sub_title_text_size"
        tools:text="汇款凭证" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/UikitTextView.Auxiliary.Small"
        android:layout_marginStart="37dp"
        android:layout_marginTop="37dp"
        tools:text="上传时间：2019.09.23" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:scaleType="center"
        android:src="@mipmap/uikit_ic_arrow_right" />

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
