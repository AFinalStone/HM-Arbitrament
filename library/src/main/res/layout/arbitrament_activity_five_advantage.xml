<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.hm.iou.uikit.HMTopBarView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:bottomDividerIsShow="false"
        app:rightText="仲裁须知"
        app:titleBackground="@color/transparent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_ok"
        android:layout_below="@id/topBar"
        android:layout_marginBottom="20dp"
        android:scrollbars="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/arbitrament_ic_five_advantage_01" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@mipmap/arbitrament_ic_five_advantage_prepare" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/arbitrament_ic_five_advantage_02" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/arbitrament_ic_five_advantage_03" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_ok"
        style="@style/UikitHMButton.Large.Black"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="20dp"
        android:text="申请仲裁"
        android:textColor="@color/white"
        android:textSize="@dimen/uikit_main_title_text_size" />
</RelativeLayout>
