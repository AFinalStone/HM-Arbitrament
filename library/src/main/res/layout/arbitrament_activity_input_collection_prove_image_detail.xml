<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/view_statusbar_placeholder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_status_bar_height" />

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View style="@style/UikitDivider.Horizontal" />

    <com.hm.iou.uikit.HMBottomBarView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:bottomBackText="催收证明"
        app:bottomTitleIcon="@mipmap/uikit_ic_menu_more"
        app:bottomTitleIconWidth="38dp" />
</LinearLayout>
